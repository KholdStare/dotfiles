#!/bin/bash
# Usage: git pull-and-rebase-onto branch
#
# Author: Alexander Kondratskiy

set -e
set -u

USAGE="Usage:
    git pull-and-rebase-onto <branch>"

if [[ $# < 1 ]]; then
    echo "${USAGE}"
    exit 1
fi


BRANCH_TO_PULL=$1
CURRENT_BRANCH=$(git-current-branch)

git checkout ${BRANCH_TO_PULL}
git pull --rebase
git rebase ${BRANCH_TO_PULL} ${CURRENT_BRANCH}
